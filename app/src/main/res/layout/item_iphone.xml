<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="#979797"
        app:cardCornerRadius="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_iphone"
                android:layout_width="wrap_content"
                android:layout_height="201dp"
                android:background="@drawable/iphone6" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:padding="2dp"
                android:textColor="@color/black"
                android:text="4.6"
                android:textSize="10sp"
                app:drawableEndCompat="@drawable/ic_star" />

            <TextView
                android:id="@+id/iphone_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/img_iphone"
                android:layout_marginStart="15dp"
                android:text="Iphone 6"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/type_iphone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iphone_name"
                android:layout_marginStart="15dp"
                android:text="Memory Internal 64GB"
                android:textColor="#979797" />

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/type_iphone"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="15dp"
                android:text="Rp. 1.200.000"
                android:textColor="#464646" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        app:layout_constraintTop_toBottomOf="@+id/cardView2" />

</androidx.constraintlayout.widget.ConstraintLayout>